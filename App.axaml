<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="yt_tutorial.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
		<StyleInclude Source="Styles/AppDefaultStyles.axaml"></StyleInclude>
    </Application.Styles>

	<Application.Resources>
		<SolidColorBrush x:Key="PrimaryText">#CFCFCF</SolidColorBrush>
		<SolidColorBrush x:Key="PrimaryBackground">#b19cd9</SolidColorBrush>
		<LinearGradientBrush x:Key="PrimaryBackgroundGradient" StartPoint="0%, 0%" EndPoint="100%, 0%">
			<GradientStop Offset="0" Color="#58427c"></GradientStop>
			<GradientStop Offset="1" Color="#856088"></GradientStop>
		</LinearGradientBrush>
		<SolidColorBrush x:Key="PrimaryHover">#32174d</SolidColorBrush>
		<SolidColorBrush x:Key="PrimaryHoverText">White</SolidColorBrush>

		<FontFamily x:Key="AndroidAssassinItalic">/Assets/Fonts/Android-Assassin-Italic.ttf#Android Assassin</FontFamily>
		<FontFamily x:Key="AndroidAssassin">/Assets/Fonts/Android-Assassin.ttf#Android Assassin</FontFamily>
		<FontFamily x:Key="GardionDemo">/Assets/Fonts/Gardion-Demo.otf#Gardion Demo</FontFamily>
		<FontFamily x:Key="Sora">/Assets/Fonts/Sora-Regular.ttf#Sora</FontFamily>
		<FontFamily x:Key="SoraBold">/Assets/Fonts/Sora-Bold.ttf#Sora</FontFamily>
		<FontFamily x:Key="Phosphor">/Assets/Fonts/Phosphor.ttf#Phosphor</FontFamily>
		<FontFamily x:Key="PhosphorFill">/Assets/Fonts/Phosphor-Fill.ttf#Phosphor</FontFamily>
	</Application.Resources>
</Application>